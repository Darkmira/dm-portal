{% extends '@App/Email/base.html.twig' %}

{% block title parent() ~ ' - ' ~ 'email.status-article.title'|trans %}

{% block content %}
    <table cellpadding="0" cellspacing="0">
        <tr>
            <td class="content-block">
                <h3 class="first">{{ 'email.status-article.main-title'|trans }}</h3>
            </td>
        </tr>
        <tr>
            <td>
                <span class="label label-warning">{{ article.category.label }}</span>
                {{ article.title }}
            </td>
        </tr>
        <tr>
            <td class="content-block">{{ article.description|escape|markdown }}</td>
        </tr>
        <tr>
            <td class="content-block">
                {{ 'email.status-article.msg.status'|trans }} <strong>{{ article.status.label|trans }}</strong>
            </td>
        </tr>
        {% if article.status.id == 2 %}
            <tr>
                <td class="content-block aligncenter">
                    <a href="{{ article.link }}" class="btn-primary">{{ 'email.status-article.action.link'|trans }}</a>
                </td>
            </tr>
        {% endif %}
    </table>
{% endblock %}
